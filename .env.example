# InvestSmart AI Environment Configuration
# Copy this file to .env and update with your actual values

# ===========================================
# SERVER CONFIGURATION
# ===========================================
PORT=3000
NODE_ENV=development

# ===========================================
# API KEYS - Required for full functionality
# ===========================================

# Alpha Vantage API (Stock Market Data)
# Get your free API key from: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Pinecone Vector Database (AI Features)
# Sign up at: https://www.pinecone.io/
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here
PINECONE_INDEX_NAME=finance-gpt-index

# ===========================================
# OPTIONAL API KEYS
# ===========================================

# Financial Modeling Prep (Additional Financial Data)
# Get API key from: https://financialmodelingprep.com/developer/docs
FMP_API_KEY=your_fmp_api_key_here

# News API (Financial News)
# Get API key from: https://newsapi.org/
NEWS_API_KEY=your_news_api_key_here

# IEX Cloud (Market Data)
# Get API key from: https://iexcloud.io/
IEX_API_KEY=your_iex_api_key_here

# ===========================================
# CACHING & PERFORMANCE
# ===========================================
CACHE_TIMEOUT=300000
MAX_CACHE_SIZE=1000
ENABLE_RATE_LIMITING=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ===========================================
# LOGGING & MONITORING
# ===========================================
LOG_LEVEL=info
ENABLE_ACCESS_LOGS=true

# ===========================================
# SECURITY
# ===========================================
CORS_ORIGIN=http://localhost:8080
SESSION_SECRET=your_session_secret_here

# ===========================================
# DATABASE (Optional - for user data)
# ===========================================
# DATABASE_URL=your_database_connection_string_here
# DATABASE_NAME=investsmart_ai

# ===========================================
# EMAIL (Optional - for notifications)
# ===========================================
# SMTP_HOST=your_smtp_host
# SMTP_PORT=587
# SMTP_USER=your_email_username
# SMTP_PASS=your_email_password

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# WEBHOOK_URL=your_webhook_url_for_alerts
# SLACK_WEBHOOK_URL=your_slack_webhook_for_notifications

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_AI_SUGGESTIONS=true
ENABLE_PORTFOLIO_ANALYSIS=true
ENABLE_RISK_ASSESSMENT=true
ENABLE_EDUCATIONAL_CONTENT=true
ENABLE_MARKET_SENTIMENT=true

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
DEBUG_MODE=false
MOCK_DATA_MODE=false
ENABLE_DETAILED_ERRORS=true